---
import { Image } from 'astro:assets'
import logo from '../../../public/logo.png'

type Props = {
  className?: string
}

const { className } = Astro.props;
---

<header
  class:list={[
    'h-14 flex items-center justify-center bg-background z-50 sticky top-0 container',
    className,
  ]}
>
  <div class="relative flex items-center size-full md:max-w-[948px]">
    <div class="items-center gap-6 md:gap-8 lg:gap-10 hidden md:flex">
      <a href="/" class="items-center space-x-2" title="Home">
        <Image src={logo} alt="Logo" class="size-8 rounded-full border shadow-sm" loading="lazy" />
      </a>
    </div>

    <!-- mobile-nav-header -->
    <div class="hidden md:flex mx-auto">
      <!-- normal nav menu -->
      <slot name="nav-header" />
    </div>
    <div class="flex md:hidden">
      <!-- normal nav menu -->
      <slot name="mobile-nav-header" />
    </div>

    <!-- logo mobile center -->
    <div class="absolute top-1/2 left-1/2 -translate-x-4 -translate-y-4 md:hidden">
      <a href="/" aria-label="Astronomy homepage" title="Home">
        <Image src={logo} alt="Logo" class="size-8" loading="lazy" />
      </a>
    </div>

    <!-- Theme Toggle -->
    <slot name="right-header" />
  </div>
</header>
