---
import { Image } from 'astro:assets'
import logo from '../../../public/logo.png'

type Props = {
  className?: string
}

const { className } = Astro.props;
---

<header
  class:list={[
    'h-14 flex items-center justify-between bg-background z-50 sticky top-0 container',
    className,
  ]}
>
  <div class="relative container flex items-center justify-between w-full ">
    <div class="flex items-center gap-6 md:gap-8 lg:gap-10">
      <a href="/" class="hidden items-center space-x-2 md:flex">
        <Image src={logo} alt="Logo" class="size-8 rounded-full border shadow-sm" loading="lazy" />
      </a>

    </div>
    <div class="mx-auto">
      <!-- mobile-nav-header -->
      <div class="hidden md:flex">
        <!-- normal nav menu -->
        <slot name="nav-header" />
      </div>
      <slot name="mobile-nav-header" />
    </div>

    <!-- logo mobile center -->
    <div class="absolute top-1/2 left-1/2 -translate-x-4 -translate-y-4 md:hidden">
      <a href="/" aria-label="Astronomy homepage">
        <Image src={logo} alt="Logo" class="size-8" loading="lazy" />
      </a>
    </div>

    <!-- Theme Toggle -->
    <slot name="right-header" />
  </div>
</header>
