---
import BaseHead from '@/components/seo/BaseHead.astro'
import TailwindIndicator from '@/components/util/tailwind-indicator.astro'
import { cn } from '@/lib/utils'

type Props = {
  title: string
  description?: string
  bodyClass?: string
}

const { title, description, bodyClass } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body class={cn(
    'min-h-screen bg-background  antialiased',
    bodyClass,
    )}
  >
    <slot />
    <TailwindIndicator />
  </body>
</html>
