---
import Bg from '@/components/Bg.astro'
import BaseHead from '@/components/seo/base-head.astro'
import TailwindIndicator from '@/components/util/tailwind-indicator.astro'
import { cn } from '@/lib/utils'
import { Toaster } from 'sonner'

type Props = {
  title: string
  description?: string
  bodyClass?: string
  bgType?: 'default' | false
  bgClass?: string
}

const { title, description, bodyClass, bgType, bgClass } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body class={cn(
    'min-h-screen bg-background  antialiased',
    bodyClass,
    )}
  >
    {
      bgType && <Bg type={bgType} bgClass={bgClass} />
    }
    <!-- Background -->
    <slot />
    <TailwindIndicator />
    <Toaster richColors client:only="react" />
  </body>
</html>

