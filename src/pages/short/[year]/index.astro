---
import { getShorts } from '@/lib/fetchers'
import ShortLayout from '../_layout/ShortLayout.astro'

export async function getStaticPaths() {
  const shorts = await getShorts()
  return shorts.map(short => ({
    params: {
      id: short.id,
      year: short.id.substring(0, 4),
    },
    props: short,
  }))
}
---

<ShortLayout
  type="year"
>
</ShortLayout>

