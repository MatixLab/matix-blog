---
import {
  Table,
  TableBody,
  TableCell,
  TableHead,
  TableHeader,
  TableRow,
} from '@/components/ui/table'
import { use } from '@/config/resource'
import ResourceLayout from '@/layouts/ResourceLayout.astro'
---

<ResourceLayout
  title="Uses Resource"
  description="Anthony's uses resource"
>
  <div slot="right-content">
    <Table>
      <TableHeader>
        <TableRow>
          <TableHead className="min-w-[250px] md:min-w-[300px] px-4">Product</TableHead>
          <TableHead className="min-w-[300px] px-4 hidden md:table-cell">Specs</TableHead>
          <TableHead className="min-w-[60px] md:min-w-[70px] px-4 text-right"></TableHead>
        </TableRow>
      </TableHeader>
      <TableBody>
        {
          use.map((item) => {
            return (
              <TableRow>
                <TableCell className="px-4 py-3 font-medium">{item.title}</TableCell>
                <TableCell className="px-4 py-3 hidden md:block">{item.desc}</TableCell>
                <TableCell className="px-4 py-3 font-medium">
                  {
                    item.url
                    ? (
                        <a
                          href={`${item.url}?ref=huakucha.top`}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="break-words after:content-['_â†—'] hover:underline underline-offset-4"
                        >
                          {item.source}
                        </a>
                      )
                    : '-'
                  }
                </TableCell>
              </TableRow>
            )
          })
        }
      </TableBody>
    </Table>
  </div>
</ResourceLayout>
