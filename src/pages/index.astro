---
import MainLayout from '@/layouts/MainLayout.astro'
import Intro from './_components/Intro.astro'
import RecentPosts from './_components/RecentPosts.astro'
import RecentWeekly from './_components/RecentWeekly.astro'
---

<MainLayout
  title="About"
  description="Anthony's homepage"
>
  <div class="scrollable-area container max-w-[1024px] relative flex w-full flex-col">
    <div class="flex w-full lg:py-12">
      <div class="mx-auto w-full lg:mb-0">
        <Intro />
        <hr class="my-8 w-20 mx-auto" />
        <RecentPosts />
        <hr class="my-8 w-20 mx-auto" />
        <RecentWeekly />
      </div>
    </div>
  </div>
</MainLayout>

<style>
  .scrollable-area {
    @apply h-full overflow-y-auto overflow-x-hidden;
  }
</style>
